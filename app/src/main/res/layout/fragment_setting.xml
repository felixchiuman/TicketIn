<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.fragment.Setting"
    android:background="@color/navy_blue">


    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:backgroundTint="@color/navy_blue"
        app:strokeColor="@color/white"
        app:strokeWidth="3dp"
        android:layout_margin="16dp"
        app:cardCornerRadius="10dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:background="@color/navy_blue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp">

            <ImageView
                android:id="@+id/iv_profile"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_baseline_account_circle_24"/>

            <ImageView
                android:id="@+id/iv_next1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_baseline_navigate_next_24"/>

            <TextView
                android:id="@+id/tv_profile"
                app:layout_constraintStart_toEndOf="@id/iv_profile"
                app:layout_constraintTop_toTopOf="@id/iv_profile"
                app:layout_constraintBottom_toBottomOf="@id/iv_profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Profile"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:layout_marginStart="16sp"/>

            <View
                app:layout_constraintTop_toBottomOf="@id/iv_profile"
                app:layout_constraintBottom_toTopOf="@id/iv_security"
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="@color/white"/>

            <ImageView
                android:id="@+id/iv_security"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/iv_profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_baseline_key_24_white"
                android:layout_marginTop="16dp"/>

            <ImageView
                android:id="@+id/iv_next2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/iv_security"
                app:layout_constraintBottom_toBottomOf="@id/iv_security"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_baseline_navigate_next_24"/>

            <TextView
                android:id="@+id/tv_security"
                app:layout_constraintStart_toEndOf="@id/iv_security"
                app:layout_constraintTop_toTopOf="@id/iv_security"
                app:layout_constraintBottom_toBottomOf="@id/iv_security"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Security"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:layout_marginStart="16sp"/>

            <View
                app:layout_constraintTop_toBottomOf="@id/iv_security"
                app:layout_constraintBottom_toTopOf="@id/iv_info"
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="@color/white"/>

            <ImageView
                android:id="@+id/iv_info"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/iv_security"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_baseline_info_24"
                android:layout_marginTop="16dp"/>

            <TextView
                android:id="@+id/tv_info1"
                app:layout_constraintStart_toEndOf="@id/iv_info"
                app:layout_constraintTop_toTopOf="@id/iv_info"
                app:layout_constraintBottom_toBottomOf="@id/iv_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Version"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:layout_marginStart="16sp"/>

            <TextView
                android:id="@+id/tv_info2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/iv_info"
                app:layout_constraintBottom_toBottomOf="@id/iv_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0.3.2"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:layout_marginStart="16sp"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.button.MaterialButton
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/btn_signout"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="196dp"
        android:paddingStart="40dp"
        android:paddingEnd="40dp"
        android:text="Sign Out"
        android:textAllCaps="false"
        android:textSize="16sp"
        android:textStyle="bold"
        android:backgroundTint="@color/orange"
        app:cornerRadius="16dp"
        android:layout_marginBottom="64dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>